<%- include('includes/head.ejs') %>    
<%- include('includes/navbar.ejs') %>
<div class="container">
    <form>
        <div class="form-group">
        <label for="coursename">Course Name</label>
        <input type="text" class="form-control" id="coursename" aria-describedby="coursename" placeholder="Enter Course Name">
        </div>
        <div class="form-group">
        <label for="code">Course Code</label>
        <input type="text" class="form-control" id="code" placeholder="Course Code">
        </div>
        <div class="form-group">
            <label for="semester">Semester</label>
            <select id="semester" name="semester" class="form-control">
                <option>select</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
            </select>
        </div>
        <div class="form-group">
            <label for="branch">Branch</label>
            <select id="branch" name="branch" class="form-control">
                <option>select</option>
                <% branches.forEach((branch)=>{ %>
                    <option><%= branch.name %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="Type">Type</label>
            <select id="Type" class="form-control">
                <option>select</option>
                <option>Compalsory </option>
                <option>Elective </option>
            </select>
        </div>
        <div class="form-group">
            <label for="teacher">Teacher</label>
            <select id="teacher" class="form-control">
                <option>select</option>
                <% teachers.forEach((teacher)=>{ %>
                    <option><%= teacher.username %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="credit">Credit</label>
            <select id="credit" class="form-control">
                <option>select</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include('includes/footer.ejs') %>  