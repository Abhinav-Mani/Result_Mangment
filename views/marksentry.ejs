<%- include('includes/head.ejs') %>    
<%- include('includes/navbar.ejs') %>
<div class="container" style="background-color: antiquewhite; margin-top: 20px;">
    <form>
        <div class="form-group row">
        <label for="no" class="col-sm-2 col-form-label">No of Student</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" name="no" id="no" value="<%= students.length %>" readonly>
        </div>
        </div>
        <% let i = 1; %>
        <% students.forEach((student)=>{ %>
        <div class="row">
            <div class="col">
              <input type="text" name="<%=i%>[name]" class="form-control" name="name" value="<%= student.rollno %>" readonly>
            </div>
            <div class="col">
              <input type="number"  name="<%=i%>[mid]" class="form-control" placeholder="Mid Sem Marks">
            </div>
            <div class="col">
                <input type="number" name="<%=i%>[inter]" class="form-control" placeholder="Internal Marks">
            </div>
            <div class="col">
                <input type="number"  name="<%=i%>[end]" class="form-control" placeholder="END Sem Marks">
            </div>
        </div>
        <%i++%>
        <% }) %>

        <button type="submit" class="btn btn-primary" style="margin: 20px; width: 100%;">Submit</button>
    </form>
</div>

<%- include('includes/footer.ejs') %>  